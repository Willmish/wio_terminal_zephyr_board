/dts-v1/;
#include <atmel/samd5xx19.dtsi>

/ {
	model = "Wio Terminal";
	compatible = "seeed,wio-terminal";

	chosen {
		zephyr,console = &sercom2;
		zephyr,shell-uart = &sercom2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
        sw0 = &user_button_0;
        sw1 = &user_button_1;
        sw2 = &user_button_2;
		//pwm-led0 = &pwm_led0;
		//pwm-0 = &tcc0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&porta 15 0>;
			label = "LED";
		};
    gpio_keys {
        compatible = "gpio-keys";
        user_button_0: button_0 {
        label = "User Button 0";
        gpios = <&portc 26 1>;
        };
        user_button_1: button_1 {
        label = "User Button 1";
        gpios = <&portc 27 1>;
        };
        user_button_2: button_2 {
        label = "User Button 2";
        gpios = <&portc 28 1>;
        };
    };
	};

	//pwmleds {
	//	compatible = "pwm-leds";
	//	pwm_led0: pwm_led_0 {
	//		pwms = <&tcc0 2>;
	//	};
	//};
};

&cpu0 {
	clock-frequency = <120000000>;
};

&sercom1 {
    status = "okay";
    compatible = "atmel,sam0-uart";
    current-speed = <115200>;
    rxpo = <1>;
    txpo = <0>;

    pinctrl-0 = <&pc22c_sercom1_pad0 &pc23c_sercom1_pad1>;
};

&sercom2 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	current-speed = <115200>;
	rxpo = <1>;
	txpo = <0>;

    pinctrl-0 = <&pb27c_sercom2_pad1 &pb26c_sercom2_pad0>;
};

